# git commamands simplified
alias gst='git status'
alias gco='git checkout'
alias gci='git commit'
alias grb='git rebase'
alias gbr='git branch'
alias gad='git add -A'
alias gpl='git pull'
alias gpu='git push'
alias glg='git log --date-order --all --graph --format="%C(green)%h%Creset %C(yellow)%an%Creset %C(blue bold)%ar%Creset %C(red bold)%d%Creset%s"'
alias glg2='git log --date-order --all --graph --name-status --format="%C(green)%H%Creset %C(yellow)%an%Creset %C(blue bold)%ar%Creset %C(red bold)%d%Creset%s"'
alias glg3='git log --pretty=format:"%C(yellow)%h %C(red)%ad %C(blue)%an%C(green)%d %C(reset)%s" --date=short'
alias gsu='git submodule update'
alias gsubs='git submodule init && git submodule sync && git submodule update'
alias gsh='git show'
alias githist='git log --graph --branches --oneline'
alias gdif='git diff'

# ls alias for color-mode
alias lh='ls -lhaG'

# fun aliases
alias weather='curl -4 http://wttr.in/portland' # weather for portland

# up 'n' folders
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# grep with color
alias grep='grep --color=auto'

# processes
alias ps='ps -ax'

# refresh shell
alias reload='source ~/.zshrc'

# rails
alias be='bundle exec'
alias rpry='bundle exec pry -r ./config/environment'
alias ropry='bundle exec pry -r ./config/application'

# tmux
alias tmx='tmux attach -t base || tmux new -s base'

# vim
alias vpinstall='vim +PlugInstall +VimEnter +qall'
alias vpclean='vim +PlugClean +VimEnter +qall'
alias vpupdate='vim +PlugUpdate +qall'
alias vpupgrade='vim +PlugUpgrade +qall'
alias vpstatus='vim +PlugStatus'


# python
alias py='python3'

# Node Server
alias ns='DEBUG=myapp:* npm start'

# Redis Server
alias redis='redis-server /usr/local/etc/redis.conf'

# Hub for Github
alias hb='hub browse'
